@model ChoixResto.ViewModels.AccueilViewModel

@using (Html.BeginForm())
{
<fieldset>
    <legend>Connexion :</legend>
    @Html.Label("Login")
    @Html.TextBox("login", Model.Login)
    <br />
    @Html.Label("Mot de Passe")
    @Html.TextBox("mdp")
    <br />
    <input type="submit" name="name" value="Se Connecter.." />
</fieldset>
}
